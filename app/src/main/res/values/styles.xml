<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NotepadTextLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e6e6e6</item>
        <item name="android:layout_marginTop">13dp</item>
    </style>

    <style name="NotepadHeaderLine" parent="NotepadTextLine">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginTop">22dp</item>
    </style>

    <style name="NotepadText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/pencil</item>
    </style>

    <color name="paper">#f2f2f2</color>
    <color name="pencil">#6E6E6E</color>
</resources>
